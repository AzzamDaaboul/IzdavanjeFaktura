@model IzdavanjeFaktura.Models.Faktura

@{
    ViewData["Title"] = "Delete";
}

<div class="col-11 mx-auto pt-0 p-0">
    <div class="text-center bg-danger">
        <h1>Jeste li sigurni da želite izbrisati fakturu?</h1>
    </div>
</div>

    <div class="col-11 mx-auto pt-0 p-0">
    <div class="card-header bg-success text-uppercase text-white" style="height:45px;">

    <h4>Brisanje fakture</h4>
    </div>
    </div>
    
    <hr />

<div class="card">
    <form asp-action="Delete" class="form">

        <input type="hidden" asp-for="Id" />


        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="BrojFakture" class="control-label"></label>
                    <input asp-for="BrojFakture" class="form-control-plaintext" readonly />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="DatumStvaranjaFakture" class="control-label"></label>
                    <input asp-for="DatumStvaranjaFakture" class="form-control-plaintext" readonly />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="DatumDospijecaFakture" class="control-label"></label>
                    <input asp-for="DatumDospijecaFakture" class="form-control-plaintext" readonly />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="UkupnaCijenaBezPoreza" class="control-label"></label>
                    <input asp-for="UkupnaCijenaBezPoreza" class="form-control-plaintext" readonly />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="UkupnaCijenaSaPorezom" class="control-label"></label>
                    <input asp-for="UkupnaCijenaSaPorezom" class="form-control-plaintext" readonly />

                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="StvarateljRacuna" class="control-label"></label>
                    <input asp-for="StvarateljRacuna" class="form-control-plaintext" readonly />

                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="PrimateljRacuna" class="control-label"></label>
                    <input asp-for="PrimateljRacuna" class="form-control-plaintext" readonly />
                </div>
            </div>

            <div class="col-md-12">
                <table id="StavkeTable" class="table table-striped table-sm">
                    <thead>
                        <tr>
                            <th>
                                Broj stavke
                            </th>
                            <th>
                                Kolicina prodane stavke
                            </th>
                            <th>
                                Jedinicna cijena stavke bez poreza
                            </th>
                            <th>
                                Ukupna cijena stavke bez poreza
                            </th>

                            <th></th>

                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.FakturaStavki.Count; i++)
                        {
                            <tr>
                                <td>
                                    <input asp-for="@Model.FakturaStavki[i].BrojStavke" class="form-control-plaintext" readonly />
                                </td>
                                <td>
                                    <input asp-for="@Model.FakturaStavki[i].KolicinaProdaneStavke" class="form-control-plaintext" readonly />
                                </td>
                                <td>
                                    <input asp-for="@Model.FakturaStavki[i].JedinicnaCijenaStavkeBezPoreza" class="form-control-plaintext" readonly />
                                </td>
                                <td>
                                    <input asp-for="@Model.FakturaStavki[i].UkupnaCijenaStavkeBezPoreza" class="form-control-plaintext" readonly />
                                </td>

                                <td>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="col-12 btn-group">
                <div class="col-6 form-group text-right p-2">
                    <a asp-action="Index" class="btn btn-secondary">Nazad na listu</a>
                </div>
                <div class="col-6 form-group text-left p-2">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            </div>

        </div>
        <input type="hidden" asp-for="Id" />

       

    </form>
</div>
