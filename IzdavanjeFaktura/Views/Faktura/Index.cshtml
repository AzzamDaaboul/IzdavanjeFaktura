@model IEnumerable<IzdavanjeFaktura.Models.Faktura>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista faktura</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Kreiraj novu fakturu</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BrojFakture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DatumStvaranjaFakture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DatumDospijecaFakture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UkupnaCijenaBezPoreza)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UkupnaCijenaSaPorezom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StvarateljRacuna)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrimateljRacuna)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BrojFakture)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatumStvaranjaFakture)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatumDospijecaFakture)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UkupnaCijenaBezPoreza)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UkupnaCijenaSaPorezom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StvarateljRacuna)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrimateljRacuna)
            </td>
            <td>

                <div class="btn-group">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info">Edit</a> 
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary ml-1">Details</a> 
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger ml-1"> Delete</a>
                    </div>

            </td>
        </tr>
}
    </tbody>
</table>
